#!/bin/bash

set -e
version="0.9"

cd $JB_CT_SRC
tar -zxvf mpc-${version}.tar.gz && cd mpc-${version}
LDFLAGS="-Wl,-rpath,${JB_CROSS_TOOLS}/lib" \
  ./configure --prefix=${JB_CROSS_TOOLS} \
      --with-gmp=${JB_CROSS_TOOLS} \
      --with-mpfr=${JB_CROSS_TOOLS}
make
make install

# Clean up build dir
cd $JB_CT_SRC && rm -rf mpc-${version}
