# $Id$
# Maintainer: Thomas BÃ¤chler <thomas@archlinux.org>

pkgname=attr
pkgver=2.4.47
pkgrel=1
pkgdesc="Extended attribute support library for ACL support"
arch=('arm')
url="http://savannah.nongnu.org/projects/attr"
license=('LGPL')
depends=('musl')
#makedepends=('gettext')
replaces=('xfsattr')
provides=('xfsattr')
conflicts=('xfsattr')
options=(!makeflags)
source=("http://download.savannah.gnu.org/releases/$pkgname/$pkgname-$pkgver.src.tar.gz"{,.sig}
        "config.sub"
        )
sha256sums=('25772f653ac5b2e3ceeb89df50e4688891e21f723c460636548971652af0a859'
            'SKIP'
            '7abfb26af921bae35abec7cc16a11c9312cd2864f0d44eaef00cba62be9e31e1'
            )



prepare() {
    cd "$pkgname-$pkgver"
    echo $CC
    mv -f ../config.sub ./
}

build() {
    cd "$pkgname-$pkgver"
    echo $_cross_env
    source $_cross_env
    echo $PATH

    export INSTALL_USER=root INSTALL_GROUP=root
    ./configure \
      --prefix=/usr \
      --host=$_target\
      --build=$CHOST \
      --libdir=/usr/lib \
      --libexecdir=/usr/lib

    make
}

package() {
    echo $_cross_env
    source $_cross_env
    echo $PATH
    make -C "$pkgname-$pkgver" DIST_ROOT="$pkgdir" install install-lib install-dev

    # tidy up
    rm -f "$pkgdir"/usr/lib/libattr.a
    chmod 0755 "$pkgdir"/usr/lib/libattr.so.*.*.*

    # remove conflicting manpages
    rm -rf "$pkgdir"/usr/share/man/man2
}
